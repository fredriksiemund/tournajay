{{ template "base" . }}

{{ define "title" }}Home{{ end }}

{{ define "main" }}
  <h2 class="mt-4">🏆 Upcoming tournaments 🏆</h2>
  {{ if .Tournaments }}
    <table class="table table-hover mt-4">
      <thead>
        <tr>
          <th>What?</th>
          <th>When?</th>
        </tr>
      </thead>
      <tbody>
        {{ range .Tournaments }}
          <tr>
            <td><a href="/tournament/{{ .Id }}">{{ .Title }}</a></td>
            <td>{{ humanDate .Date }}</td>
          </tr>
        {{ end }}
      </tbody>
    </table>
  {{ else }}
    <p class="mt-4">
      Seems like there are no tournaments planned at the moment 😢
    </p>
  {{ end }}
{{ end }}
