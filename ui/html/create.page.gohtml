{{ template "base" . }}

{{ define "title" }}Create tournament{{ end }}

{{ define "main" }}
  <h2 class="mt-4">ðŸ—½ New tournament ðŸ—½</h2>
  <form action="/tournament" method="POST">
    {{ with .Form }}
      <div class="row mb-3">
        <div class="col-lg-6">
          <label class="form-label">Name</label>
          <input
            type="text"
            name="title"
            class="form-control {{ with .Errors.Get "title" }}
              is-invalid
            {{ end }}"
            value="{{ .Get "title" }}"
          />
          {{ with .Errors.Get "title" }}
            <div class="invalid-feedback">{{ . }}</div>
          {{ end }}
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-lg-6">
          <label class="form-label">Description</label>
          <textarea
            name="description"
            class="form-control {{ with .Errors.Get "description" }}
              is-invalid
            {{ end }}"
          >
{{ .Get "description" }}</textarea
          >
          {{ with .Errors.Get "description" }}
            <div class="invalid-feedback">{{ . }}</div>
          {{ end }}
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-lg-6">
          <label class="form-label">Date</label>
          <input
            type="datetime-local"
            name="datetime"
            class="form-control {{ with .Errors.Get "datetime" }}
              is-invalid
            {{ end }}"
            value="{{ .Get "datetime" }}"
          />
          {{ with .Errors.Get "datetime" }}
            <div class="invalid-feedback">{{ . }}</div>
          {{ end }}
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-lg-6">
          <label class="form-label">Type</label>
          <select
            name="type"
            class="form-select  {{ with .Errors.Get "type" }}
              is-invalid
            {{ end }}"
          >
            {{ $exp := or (.Get "type") "4" }}
            <option
              value="1"
              {{ if (eq $exp "1") }}selected{{ end }}
              disabled
            >
              Single elimination
            </option>
            <option
              value="2"
              {{ if (eq $exp "2") }}selected{{ end }}
              disabled
            >
              Double elimination
            </option>
            <option
              value="3"
              {{ if (eq $exp "3") }}selected{{ end }}
              disabled
            >
              Straight round robin
            </option>
            <option
              value="4"
              {{ if (eq $exp "4") }}selected{{ end }}
            >
              Split round robin followed by single elimination
            </option>
          </select>
          {{ with .Errors.Get "type" }}
            <div class="invalid-feedback">{{ . }}</div>
          {{ end }}
        </div>
      </div>

      <div>
        <input type="submit" class="btn btn-success" value="Submit" />
      </div>
    {{ end }}
  </form>
{{ end }}
